<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 포커스 상태일 때 배경 -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFF00"/> <!-- 노란색 배경 (포커스 시) -->
        </shape>
    </item>
    <!-- 기본 배경 -->
    <item>
        <shape>
            <solid android:color="#FFFF00"/> <!-- 흰색 배경 (포커스 아닐 때) -->
        </shape>
    </item>
</selector>
